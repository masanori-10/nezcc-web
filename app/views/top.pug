extends layout

block header
  +css('./css/index.css')
  +css('./css/app.css')
  include editor_css

block loadFiles
  +js('./vendor/ace/src/ace.js')
  +js('./vendor/vmjs/lib/polymergestures.min.js')
  +js('./vendor/vmjs/lib/pointerevents.min.js')
  +js('./vendor/vmjs/src/vismodeljs/Utils.js')
  +js('./vendor/vmjs/src/vismodeljs/Viewport.js')
  +js('./vendor/vmjs/src/vismodeljs/LayoutEngine.js')
  +js('./vendor/vmjs/src/vismodeljs/NodeView.js')
  +js('./vendor/vmjs/src/vismodeljs/VisualModelPanel.js')
  +js('./vendor/vmjs/src/vismodeljs/Shape.js')
  +js('./vendor/vmjs/app.js')
  +js('./js/top.js')

block content
  .screen(style="left: 0%;")
    .container#nez
      .row.row-content#playground(style="left:0px;")
        .header(style="padding-left: 10px; padding-right: 10px;")
          h2(style="display:inline-block; color: rebeccapurple")
            a(href="/") Nezcc Parser Generator Online Demo
        .row
          .col-leg-12
            #opegEditor(name="example", style="display: block; font-size: 15px; height: 500px;")
            br
            .text Grammar Name :&nbsp
              input#fileName(name="fileName", type="text", value="math")
              span   &nbsp
              span.text#output Target Language :&nbsp
                .dropdown(style="display: inline")
                  button.btn.btn-default.dropdown-toggle.txt#dropdownOutput(type="button", data-toggle="dropdown") None&nbsp
                    span.caret
                  ul.dropdown-menu(role="menu", aria-labelledby="dropdownOutput")
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="c") c
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="c") cnez3
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="hs") haskell
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="java") java2
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="java") java8
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="pl") perl5
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="py") python2
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="py") python3
                    li(role="presentation")
                      a(role="menuitem", tabindex="-1", value="scala") scala
            br
            input.btn.btn-primary.btn-lg.btn-block#generate(type="submit", value="Generate Parser!")
        hr
        div#outputtxt
        hr
        button#download(onclick="run();")
        hr
        .footer
          p
            a(href="https://github.com/masanori-10" target="_blank") Masanori Sato
            | 2017
